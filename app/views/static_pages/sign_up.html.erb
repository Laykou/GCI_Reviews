<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= bootstrap_form_for @user, :url => sign_up_create_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f| %>
        <%= f.text_field :firstname, label: "First name" %>
        <%= f.text_field :lastname, label: "Last name" %>
        <%= f.email_field :firstname, label: "E-mail" %>
        <%= f.password_field :password, label: "Password" %>
        <%= f.password_field :password_confirmation, label: "Confirmation" %>
        <%= f.form_group do %>
            <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
    <% end %>
  </div>
</div>