.gci-reviews-api-full-box {
    font-size: 14px;
    margin-bottom: 20px;
}

.gci-reviews-api-full-box h1 {
    color: #206083;
}

.gci-reviews-api-full-box-details {
    margin-bottom: 10px;
    display: table;
}

.gci-reviews-api-full-box-gcr-box {
    width: 190px;
    border: 1px solid #206083;
    display: table-cell;
    vertical-align: top;
}

.gci-reviews-api-full-box-gcr-box-title {
    background-color: #206083;
    color: #FFFFFF;
    padding: 5px 10px;
}

.gci-reviews-api-full-box-gcr-box-title-gcr {
    font-weight: bold;
}

.gci-reviews-api-full-box-gcr-box-title-global-clinic-rating {
    font-size: 10px;
}

.gci-reviews-api-full-box-gcr-box-content {
    padding: 15px 10px;
    text-align: center;
    font-size: 11px;
    color: #206083;
}

.gci-reviews-api-full-box-gcr-box-content-score {
    font-weight: bold;
    font-size: 50px;
}

.gci-reviews-api-full-box-gcr-box-content-text {
}

/*--------------------REVIEWS DETAILS-----------------------*/
.gci-reviews-api-full-box-details-reviews-details {
    display: table-cell;
    vertical-align: top;
    padding-left: 30px;
}

.gci-reviews-api-full-box-details-reviews-details h2 {
    margin-top: 0;
    font-size: 16px;
    font-weight: bold;
    color: #206083;
}

.gci-reviews-api-full-box-details-reviews-details-reviews-count {
    margin-top: 10px;
    font-size: 12px;
}

.gci-reviews-api-full-box-details-reviews-details-table {
    display: table;
}

.gci-reviews-api-full-box-details-reviews-details-row {
    display: table-row;
}

.gci-reviews-api-full-box-details-reviews-details-label {
    display: table-cell;
}

.gci-reviews-api-full-box-details-reviews-details-stars {
    display: table-cell;
    padding-left: 20px;
}

/*--------------------REVIEWS-----------------------*/
.gci-reviews-api-full-box-reviews {
}

/* container for all reviews */
.gci-reviews-api-full-box-reviews-all {
}

.gci-reviews-api-full-box-reviews-all-reviews {
    display: table;
}

.gci-reviews-api-full-box-reviews-all-item {
    display: table-row;
}

.gci-reviews-api-full-box-reviews-all-item > div {
    padding: 20px 10px;
    border-bottom: 1px solid #e3e3e3;
    margin-bottom: 10px;
}

.gci-reviews-api-full-box-reviews-all-item-details {
    display: table-cell;
    width: 200px;
}

.gci-reviews-api-full-box-reviews-all-item-details-name {
    font-size: 16px;
    font-weight: bold;
}

.gci-reviews-api-full-box-reviews-all-item-details-country {
    font-size: 11px;
}

.gci-reviews-api-full-box-reviews-all-item-details-date {
    margin-bottom: 10px;
}

.gci-reviews-api-full-box-reviews-all-item-details-rating {
    margin-bottom: 10px;
}

.gci-reviews-api-full-box-reviews-all-item-details-final-rating {
    font-size: 12px;
}

.gci-reviews-api-full-box-reviews-all-item-text {
    display: table-cell;
}

.gci-reviews-api-full-box-reviews-all-item-text-normal {

}

.gci-reviews-api-full-box-reviews-all-item-text-positive {
}

.gci-reviews-api-full-box-reviews-all-item-text-negative {
}

/**
* Stars
*/
.gci-reviews-rating-medium {
    display: inline-block;
    text-align: left;
    height: 19px;
    width: 105px;
    background: url('<%= image_path 'star_off_medium.png' %>') repeat-x;
}

.gci-reviews-rating-medium span {
    display: inline-block;
    text-align: left;
    height: 19px;
    background: url('<%= image_path 'star_on_medium.png' %>') repeat-x;
}