}

.gci-reviews-api-full-box-gcr-box-title-gcr {
    font-weight: bold;
}

.gci-reviews-api-full-box-gcr-box-title-global-clinic-rating {
    font-size: 10px;
}

.gci-reviews-api-full-box-gcr-box-content {
    padding: 15px 10px;
    text-align: center;
    font-size: 11px;
    color: #206083;
}

.gci-reviews-api-full-box-gcr-box-content-score {
    font-weight: bold;
    font-size: 50px;
}

.gci-reviews-api-full-box-gcr-box-content-text {
}

/*--------------------REVIEWS DETAILS-----------------------*/
.gci-reviews-api-full-box-details-reviews-details {
    display: table-cell;
    vertical-align: top;
    padding-left: 30px;
}

.gci-reviews-api-full-box-details-reviews-details h2 {
    margin-top: 0;
    font-size: 16px;
    font-weight: bold;
    color: #206083;
}

.gci-reviews-api-full-box-details-reviews-details-reviews-count {
    margin-top: 10px;
    font-size: 12px;
}

.gci-reviews-api-full-box-details-reviews-details-table {
    display: table;
}

.gci-reviews-api-full-box-details-reviews-details-row {
    display: table-row;
}

.gci-reviews-api-full-box-details-reviews-details-label {
    display: table-cell;
}

.gci-reviews-api-full-box-details-reviews-details-stars {
    display: table-cell;
    padding-left: 20px;
}

/*--------------------WRITE REVIEW--------------------*/
.gci-reviews-api-full-box-details-reviews-write-review {
    position: absolute;
    bottom: 10px;
    right: 20px;

    display: inline-block;
    outline: none;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
    -webkit-border-radius: .5em;
    -moz-border-radius: .5em;
    border-radius: .5em;
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    color: #FFFFFF;
    border: solid 1px #da7c0c;
    background: #f78d1d;
    background: -webkit-gradient(linear, left top, left bottom, from(#feba02), to(#f47a20));
    background: -moz-linear-gradient(top, #feba02, #f47a20);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#feba02', endColorstr='#f47a20');

    font-size: 18px;
    padding: 10px 20px;
}

.gci-reviews-api-full-box-details-reviews-write-review:hover {
    text-decoration: underline;
    background: #f47c20;
    background: -webkit-gradient(linear, left top, left bottom, from(#f88e11), to(#f06015));
    background: -moz-linear-gradient(top, #f88e11, #f06015);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#f88e11', endColorstr='#f06015');
    color: #FFFFFF;
}

